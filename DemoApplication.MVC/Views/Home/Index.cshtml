@model HomePage
@{
    ViewData["Title"] = "Home";
}

<div class="container-fluid m-3">
    <div class="row">
        <div class="col-md-3 mb-3">
            <div class="card text-center text-white bg-dark box-glow" style="max-width: 18rem;min-height: 20rem; max-height:20rem">
                <div class="card-header text-uppercase">
                    EUR to INR
                </div>
                <div class="card-body custom-overflow p-2">
                    <p class="card-title" style="font-size: 4rem;">@Model.currencyEx.TargetCurrency</p>
                    <p class="card-text mt-2">1 Euro price converted to INR Last updated on @Model.currencyEx.LastUpdated.ToString()</p>
                </div>
                <div class="card-footer text-muted">
                    <a role="button" class="pointer text-info" href="https://exchangeratesapi.io/" target="_blank">Go to Source page</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card text-center text-white bg-dark box-glow" style="max-width: 18rem;min-height: 20rem">
                <div class="card-header text-uppercase">
                    Student count
                </div>
                <div class="card-body custom-overflow p-2">
                    <p class="card-title" style="font-size: 4rem;">@Model.StudentCount</p>
                    <p class="card-text mt-2">Number of students joined.</p>
                </div>
                <div class="card-footer text-muted">
                    <a role="button" class="pointer text-info" asp-controller="Students" asp-action="Index">Go to Student page</a>
                </div>
            </div>
        </div>
    </div>
</div>